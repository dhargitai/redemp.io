generator client {
  provider = "prisma-client-js"
  previewFeatures = ["deno"]
  output = "../generated/prisma-client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model coupon_instances {
  id          BigInt        @id @default(autoincrement())
  created_at  DateTime?     @default(now()) @db.Timestamptz(6)
  coupon_id   BigInt        @default(autoincrement())
  customer_id BigInt        @default(autoincrement())
  coupons     coupons       @relation(fields: [coupon_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
  customers   customers     @relation(fields: [customer_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
  redemptions redemptions[]

  @@index([coupon_id])
}

model coupons {
  id               BigInt             @id @default(autoincrement())
  created_at       DateTime?          @default(now()) @db.Timestamptz(6)
  title            String?            @db.VarChar
  description      String?
  image_url        String?            @db.VarChar
  user_id          BigInt             @default(autoincrement())
  coupon_instances coupon_instances[]
  users            users              @relation(fields: [user_id], references: [id], onDelete: NoAction, onUpdate: NoAction)

  @@index([user_id])
}

model customers {
  id               BigInt             @id @default(autoincrement())
  email            String?            @db.VarChar
  created_at       DateTime?          @default(now()) @db.Timestamptz(6)
  coupon_instances coupon_instances[]
  redemptions      redemptions[]
}

model redemptions {
  id                 BigInt           @id @default(autoincrement())
  created_at         DateTime?        @default(now()) @db.Timestamptz(6)
  revenue            Decimal?         @db.Money
  currency           String?          @db.VarChar
  coupon_instance_id BigInt           @default(autoincrement())
  customer_id        BigInt           @default(autoincrement())
  coupon_instances   coupon_instances @relation(fields: [coupon_instance_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
  customers          customers        @relation(fields: [customer_id], references: [id], onDelete: NoAction, onUpdate: NoAction)

  @@index([coupon_instance_id])
  @@index([customer_id])
}

model users {
  id         BigInt    @id @default(autoincrement())
  name       String?   @db.VarChar
  email      String?   @db.VarChar
  created_at DateTime? @default(now()) @db.Timestamptz(6)
  role       role?
  password   String?   @db.VarChar
  coupons    coupons[]

  @@index([name])
}

enum role {
  admin
  manager
  staff
}
